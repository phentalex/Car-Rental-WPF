<Page x:Class="Car_Rental.PageClients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="https://materialdesignxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Car_Rental"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="1620"
      Title="PageClients"
      Foreground="Wheat"
      FontSize="26"
      Loaded="Page_Loaded">

    <Grid>
        <DataGrid x:Name="ClientsTable"
                  Foreground="#223"
                  Height="700"
                  Margin="10"
                  AutoGenerateColumns="True"
                  VerticalAlignment="Top"/>

        <StackPanel Orientation="Horizontal"
                    Height="180"
                    VerticalAlignment="Bottom">

            <TextBox x:Name="id_client"
                     Visibility="Hidden"
                     Width="300"
                     Margin="20"
                     Text="{Binding SelectedItem.НомерКлиента, ElementName=ClientsTable}"/>
        </StackPanel>
    </Grid>
</Page>
